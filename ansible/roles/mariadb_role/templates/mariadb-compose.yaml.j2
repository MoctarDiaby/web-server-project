services:
  {{ mariadb_name }}:
    container_name: {{ mariadb_name }}
    image: {{ mariadb_image }}
    environment:
      - MYSQL_ROOT_PASSWORD : {{ mariadb_root_password }}
      - MYSQL_DATABASE : {{ mariadb_name }}
      - MYSQL_USER : {{ mariadb_user }}
      - MYSQL_PASSWORD : {{ mariadb_password }}
    ports: 
      - 3306:3306

